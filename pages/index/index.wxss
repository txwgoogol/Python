/* 滚动显示 */
.swiper_container {
  margin-top: 20rpx;
  text-align: center;
  height: 50rpx;
  width: 100%;
}
 
.swiper_item {
  text-align: center;
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2rpx;
}

.pm25{
  margin-top: 10rpx;
  display: flex;
  font-size: 25rpx;
  text-align: center;
  flex-direction: row;  
  justify-content: center; 
  padding-bottom: 310rpx;
}

.pm25_num{
  color: white;
}

.pm_level{
  color: white;
  margin-left: 10rpx;
}

.title{
  color: gray;
  font-size: 30rpx;
}
.des{
  color: gray;
  font-size: 25rpx;
}

